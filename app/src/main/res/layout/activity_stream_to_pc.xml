<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StreamToPcActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarStreamToPc"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Stream ke PC" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Koneksi:"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

        <TextView
            android:id="@+id/textViewStreamStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:padding="16dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Terputus" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLayoutPcIpAddress"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Alamat IP Komputer">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPcIpAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:digits="0123456789."
                android:text="192.168.1." />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonConnectToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Hubungkan" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Setelah terhubung, Anda bisa kembali ke menu lain (seperti Stock Opname atau Read Tag). Setiap hasil pindai akan otomatis dikirim ke PC."
            android:gravity="center_horizontal"
            android:textAppearance="?attr/textAppearanceBody2" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
