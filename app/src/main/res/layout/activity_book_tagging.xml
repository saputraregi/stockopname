<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".BookTaggingActivity">

    <!-- Toolbar (opsional, jika Anda menggunakannya) -->
    <!-- ... Toolbar Anda ... -->

    <!-- Input Kode Item -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutItemCode"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_item_code_scan_or_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonScanBarcode"
        app:layout_constraintHorizontal_weight="3"
        android:layout_marginEnd="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextItemCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/default_text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/buttonScanBarcode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/md_theme_background"
        android:contentDescription="@string/scan_barcode"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_barcode_scan"
        app:layout_constraintBottom_toBottomOf="@+id/textInputLayoutItemCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/textInputLayoutItemCode"
        app:layout_constraintTop_toTopOf="@+id/textInputLayoutItemCode" />

    <!-- AWAL: NestedScrollView untuk konten utama -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/md_theme_background"
        app:layout_constraintBottom_toTopOf="@+id/buttonStartTagging"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutItemCode"> <!-- Constraint ke atas Tombol Aksi Utama -->

        <!-- LinearLayout sebagai child langsung dari NestedScrollView untuk menampung elemen-elemen lain -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Detail Buku -->
            <androidx.cardview.widget.CardView
                android:id="@+id/layoutBookDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                tools:visibility="visible">
                <!-- Isi CardView seperti sebelumnya -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_theme_background"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/textViewBookTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/default_text_color"
                        tools:text="Judul Buku Sangat Panjang Sekali Agar Layout Terlihat Baik" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_item_code"
                            android:textColor="@color/default_text_color"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewItemCodeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textColor="@color/default_text_color"
                            tools:text="KB0012345" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_pairing_status"
                            android:textColor="@color/default_text_color"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewCurrentRfidStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textColor="@color/default_text_color"
                            tools:text="PAIRED_WRITE_SUCCESS" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_epc_database"
                            android:textColor="@color/default_text_color"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewCurrentRfidTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textColor="@color/default_text_color"
                            tools:text="1234567890ABCDEF12345678" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_tid_database"
                            android:textColor="@color/default_text_color"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewCurrentTid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textColor="@color/default_text_color"
                            tools:text="E28011700000020C9F2B172D" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Info Tag yang Discan / Akan Ditulis -->
            <LinearLayout
                android:id="@+id/layoutScannedTagInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/md_theme_background"
                android:orientation="vertical"
                android:padding="8dp">
                <!-- Isi LinearLayout seperti sebelumnya -->
                <TextView
                    android:id="@+id/textViewScannedEpcLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_epc_scanned_on_tag"
                    android:textColor="@color/default_text_color"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/textViewScannedEpcValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="monospace"
                    android:textColor="@color/default_text_color"
                    android:visibility="gone"
                    tools:text="AABBCCDDEEFF001122334455"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/textViewScannedTidLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_tid_scanned_on_tag"
                    android:textColor="@color/default_text_color"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/textViewScannedTidValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="monospace"
                    android:textColor="@color/default_text_color"
                    android:visibility="gone"
                    tools:text="E200341201301780080C0D40"
                    tools:visibility="visible" />
            </LinearLayout>

            <!-- Status Proses -->
            <TextView
                android:id="@+id/textViewProcessStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/default_text_color"
                tools:text="Status: Silakan scan barcode buku atau dekatkan tag RFID." />

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/progressBarTagging"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:indeterminate="true"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <!-- AKHIR: NestedScrollView -->


    <!-- Tombol Aksi Utama -->
<Button
android:id="@+id/buttonStartTagging"
style="@style/Widget.MaterialComponents.Button.Icon"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginBottom="8dp"
android:visibility="gone"
app:icon="@drawable/ic_tag"
app:layout_constraintBottom_toTopOf="@+id/linearLayoutBottomButtons"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
tools:text="@string/button_start_tagging_process_untagged"
tools:visibility="visible" />

    <!-- Grup Tombol Bawah (Clear & Cancel) -->
<LinearLayout
    android:id="@+id/linearLayoutBottomButtons"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

<Button
    android:id="@+id/buttonClear"
    style="?attr/materialButtonOutlinedStyle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/button_clear"
    android:layout_marginEnd="4dp"/>

<Button
    android:id="@+id/buttonCancel"
    style="@style/Widget.MaterialComponents.Button.TextButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/action_cancel"
    android:layout_marginStart="4dp"
    android:visibility="visible"
    android:enabled="false"/> <!-- Awalnya nonaktif, diaktifkan saat loading -->
</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
