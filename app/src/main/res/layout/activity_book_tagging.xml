<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Optional: ViewModel DataBinding -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".BookTaggingActivity">

        <!-- Input Kode Item dan Scan Barcode -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_input_item_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldLayout_item_code"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Kode Item Buku (Scan atau Ketik)"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button_scan_barcode"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:layout_marginEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_item_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapCharacters"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/button_scan_barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Scan"
                    app:icon="@drawable/ic_barcode_scan"
                    app:layout_constraintTop_toTopOf="@+id/textFieldLayout_item_code"
                    app:layout_constraintBottom_toBottomOf="@+id/textFieldLayout_item_code"
                    app:layout_constraintStart_toEndOf="@+id/textFieldLayout_item_code"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Status Proses -->
        <TextView
            android:id="@+id/textView_process_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Status Proses:"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView_input_item_code" />

        <TextView
            android:id="@+id/textView_process_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/default_text_color"
            app:layout_constraintBottom_toBottomOf="@+id/textView_process_status_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_process_status_label"
            app:layout_constraintTop_toTopOf="@+id/textView_process_status_label"
            tools:text="Silakan scan atau masukkan kode item buku." />

        <!-- Detail Buku (Awalnya GONE) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/layout_book_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/textView_process_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView_item_code_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kode Item:"
                    android:textColor="@color/default_text_color"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_item_code_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/default_text_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView_item_code_label"
                    app:layout_constraintTop_toTopOf="@+id/textView_item_code_label"
                    tools:text="B00001XYZ" />

                <TextView
                    android:id="@+id/textView_book_title_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Judul Buku:"
                    android:textColor="@color/default_text_color"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_item_code_value" />

                <TextView
                    android:id="@+id/textView_book_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/default_text_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView_book_title_label"
                    app:layout_constraintTop_toTopOf="@+id/textView_book_title_label"
                    tools:text="Belajar Android Jetpack Compose Modern" />

                <TextView
                    android:id="@+id/textView_current_rfid_status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Status Pairing:"
                    android:textColor="@color/default_text_color"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_book_title" />

                <TextView
                    android:id="@+id/textView_current_rfid_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/default_text_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView_current_rfid_status_label"
                    app:layout_constraintTop_toTopOf="@+id/textView_current_rfid_status_label"
                    tools:text="BELUM DITAG" />

                <TextView
                    android:id="@+id/textView_current_rfid_tag_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="EPC (Database):"
                    android:textColor="@color/default_text_color"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_current_rfid_status" />

                <TextView
                    android:id="@+id/textView_current_rfid_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/default_text_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView_current_rfid_tag_label"
                    app:layout_constraintTop_toTopOf="@+id/textView_current_rfid_tag_label"
                    tools:text="423030303033000000000000" />

                <TextView
                    android:id="@+id/textView_current_tid_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TID (Database):"
                    android:textColor="@color/default_text_color"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_current_rfid_tag" />

                <TextView
                    android:id="@+id/textView_current_tid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/default_text_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView_current_tid_label"
                    app:layout_constraintTop_toTopOf="@+id/textView_current_tid_label"
                    tools:text="E28011700000020B1A76269C" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Informasi Tag yang Terbaca Selama Proses -->
        <TextView
            android:id="@+id/textView_scanned_tid_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="TID Terbaca (Tag):"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_book_details"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView_scanned_tid_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/default_text_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/textView_scanned_tid_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_scanned_tid_label"
            app:layout_constraintTop_toTopOf="@+id/textView_scanned_tid_label"
            tools:text="E200341201300000000000AA"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView_scanned_epc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="EPC Terbaca (Tag):"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_scanned_tid_value"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView_scanned_epc_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/default_text_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/textView_scanned_epc_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_scanned_epc_label"
            app:layout_constraintTop_toTopOf="@+id/textView_scanned_epc_label"
            tools:text="4A4A4A4A4A4A4A4A4A4A4A4A"
            tools:visibility="visible" />

        <!-- Progress Bar (Awalnya GONE) -->
        <ProgressBar
            android:id="@+id/progressBar_tagging"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_scanned_epc_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Tombol Aksi -->
        <LinearLayout
            android:id="@+id/layout_action_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/progressBar_tagging"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"> <!-- Mendorong ke bawah -->

            <Button
                android:id="@+id/button_clear"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bersihkan"
                android:layout_marginEnd="8dp"/>

            <!-- Tombol Aksi Utama yang Teks dan Fungsinya Berubah -->
            <Button
                android:id="@+id/button_start_tagging"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                tools:text="Mulai Baca TID"
                android:text="Aksi Berikutnya"
                android:visibility="gone"
                tools:visibility="visible"
                android:enabled="false"/> <!-- Awalnya disabled, diatur oleh Activity -->

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
