<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ReadTagFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewReadInstruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/read_instruction"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RadioGroup
        android:id="@+id/radioGroupReadMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewReadInstruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radioButtonSingleRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read_mode_single"/>

        <RadioButton
            android:id="@+id/radioButtonContinuousRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read_mode_continuous"
            android:checked="true"
            android:layout_marginStart="16dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/buttonStartRead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start_read"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupReadMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineReadButtons"
        android:layout_marginEnd="4dp"/>

    <Button
        android:id="@+id/buttonStopRead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/stop_read"
        android:enabled="false"
        android:visibility="visible"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupReadMode"
        app:layout_constraintStart_toEndOf="@id/guidelineReadButtons"
        app:layout_constraintEnd_toStartOf="@id/buttonClearList"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>

    <Button
        android:id="@+id/buttonClearList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/clear_list"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupReadMode"
        app:layout_constraintStart_toEndOf="@id/buttonStopRead"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineReadButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33"/> <!-- Disesuaikan untuk 3 tombol -->

    <TextView
        android:id="@+id/textViewStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/buttonStartRead"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Idle"
        android:textAppearance="?attr/textAppearanceBody1"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/textViewStatusLabel"
        app:layout_constraintBottom_toBottomOf="@id/textViewStatusLabel"
        app:layout_constraintStart_toEndOf="@id/textViewStatusLabel"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/textViewLastEpcLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_epc_label"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewStatusLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewLastEpcValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="E2003412013101071234ABCD"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textIsSelectable="true"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLastEpcLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewListOfEpcsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_of_epcs_label"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/textViewLastEpcValue"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewReadEpcs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/textViewListOfEpcsLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@android:layout/simple_list_item_1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
