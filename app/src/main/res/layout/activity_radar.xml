<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RadarActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutRadar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarRadar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/title_activity_radar"
        app:titleTextColor="@android:color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayoutRadar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayoutRadar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Input EPC Target dan Tombol Pilih -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLayout_epc_target_radar"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_epc_target_radar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_select_tag_from_list_radar"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_epc_target_radar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:textColor="@color/default_text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_select_tag_from_list_radar"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/button_pilih_epc"
        app:icon="@drawable/ic_list"
        app:layout_constraintStart_toEndOf="@+id/textFieldLayout_epc_target_radar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textFieldLayout_epc_target_radar"
        app:layout_constraintBottom_toBottomOf="@+id/textFieldLayout_epc_target_radar"
        android:enabled="true"/> <!-- Activity akan mengontrol enable/disable -->


        <TextView
            android:id="@+id/textViewRadarStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/status_radar_idle"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/default_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFieldLayout_epc_target_radar"
            tools:text="Mencari EPC: E200341201..." />

    <com.example.aplikasistockopnameperpus.view.RadarView
        android:id="@+id/radarView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewRadarStatus"
        app:layout_constraintBottom_toTopOf="@id/guidelineHorizontalControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        tools:background="#E0E0E0"/>

        <!-- ... setelah <com.example.aplikasistockopnameperpus.view.RadarView ... /> -->

        <ImageView
            android:id="@+id/imageViewArrow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_up"
            android:contentDescription="@string/content_desc_radar_arrow"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@id/radarView"
            app:layout_constraintBottom_toBottomOf="@id/radarView"
            app:layout_constraintStart_toStartOf="@id/radarView"
            app:layout_constraintEnd_toEndOf="@id/radarView"
            tools:visibility="visible"
            tools:rotation="45" />

        <TextView
            android:id="@+id/textViewAngle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#80000000"
            android:padding="4dp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="@id/radarView"
            app:layout_constraintStart_toStartOf="@id/radarView"
            tools:text="Sudut: 45Â°" />


        <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontalControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68" /> <!-- Sedikit disesuaikan agar ada ruang lebih -->

        <TextView
            android:id="@+id/labelSearchRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/label_search_range_radar"
            android:textColor="@color/default_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guidelineHorizontalControls" />

        <TextView
            android:id="@+id/textViewRangeMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/text_range_min_radar"
            android:textColor="@color/default_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/seekBar_search_range_radar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/seekBar_search_range_radar" />

    <SeekBar
        android:id="@+id/seekBar_search_range_radar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="30"
        android:min="0"
        android:progress="5"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelSearchRange"
        app:layout_constraintStart_toEndOf="@id/textViewRangeMin"
        app:layout_constraintEnd_toStartOf="@id/textViewRangeMax"/>
    <!-- Hapus atribut custom drawable jika menggunakan SeekBar standar -->
    <!-- android:progressDrawable="@drawable/seekbar_bg" -->
    <!-- android:thumb="@drawable/shape_seekbar_circle" -->


        <TextView
            android:id="@+id/textViewRangeMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/text_range_max_radar"
            android:textColor="@color/default_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/seekBar_search_range_radar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/seekBar_search_range_radar" />

    <LinearLayout
        android:id="@+id/layoutButtonsRadar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/seekBar_search_range_radar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStartRadar"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_start_tracking_radar"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStopRadar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_stop_tracking_radar"
            android:enabled="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
