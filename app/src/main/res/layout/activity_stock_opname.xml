<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StockOpnameActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AplikasiStockOpnamePerpus.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_stock_opname"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.AplikasiStockOpnamePerpus.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Tombol Aksi Utama -->
            <LinearLayout
                android:id="@+id/layout_action_buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/button_start_new_session"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_start_new_session"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/button_import_data"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_import_data"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Informasi Sesi -->
            <TextView
                android:id="@+id/text_view_session_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/label_session_name"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                android:textColor="@color/default_text_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_action_buttons" />

            <TextView
                android:id="@+id/text_view_session_name_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="@color/default_text_color"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_session_name_label"
                tools:text="Opname_20240115_103000" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_edit_session_name"
                style="?attr/textInputOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_view_session_name_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/button_save_session_name"
                android:hint="@string/hint_edit_session_name"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_session_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button_save_session_name"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_save_name"
                app:icon="@drawable/ic_save"
                app:iconGravity="textStart"
                android:tooltipText="@string/button_save_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_input_layout_edit_session_name"
                app:layout_constraintBottom_toBottomOf="@id/text_input_layout_edit_session_name" />

            <!-- HAPUS ELEMEN INI JIKA MENGGUNAKAN OPSI 2 (DUA LABEL + SWITCH INTERNAL) -->
            <!--
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchScanMode" ... />
            -->

            <!-- Switch Mode Pemindaian (Opsi 2: Dua Label + Switch Internal) -->
            <TextView
                android:id="@+id/label_scan_mode_uhf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:text="UHF"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/default_text_color"
                app:layout_constraintEnd_toStartOf="@+id/switchScanModeInternal"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_input_layout_edit_session_name" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchScanModeInternal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:checked="false"
                app:layout_constraintTop_toTopOf="@id/label_scan_mode_uhf"
                app:layout_constraintBottom_toBottomOf="@id/label_scan_mode_uhf"
                app:layout_constraintStart_toEndOf="@id/label_scan_mode_uhf"
                app:layout_constraintEnd_toStartOf="@+id/label_scan_mode_barcode" />

            <TextView
                android:id="@+id/label_scan_mode_barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Barcode"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/default_text_color"
                app:layout_constraintBottom_toBottomOf="@id/switchScanModeInternal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/switchScanModeInternal"
                app:layout_constraintTop_toTopOf="@id/switchScanModeInternal" />

            <!-- Kontrol Scan -->
            <LinearLayout
                android:id="@+id/layout_scan_controls"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/switchScanModeInternal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/button_start_uhf_scan"
                    style="?attr/materialButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_start_uhf_scan"
                    app:icon="@drawable/ic_scan_uhf"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/button_start_barcode_scan"
                    style="?attr/materialButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_start_barcode_scan"
                    app:icon="@drawable/ic_barcode_scan"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_bar_opname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/layout_scan_controls"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- ... Sisa layout Anda tetap sama ... -->
            <TextView
                android:id="@+id/text_view_last_scanned_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/default_text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_bar_opname"
                tools:text="Last scan: ABC12345 (FOUND)" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_statistics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_view_last_scanned_tag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                app:cardElevation="2dp">

                <GridLayout
                    android:id="@+id/grid_layout_statistics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:padding="16dp">

                    <TextView
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/stat_total_master"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/default_text_color" />

                    <TextView
                        android:id="@+id/text_view_total_books_value"
                        android:layout_gravity="end"
                        android:layout_marginBottom="8dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/default_text_color"
                        android:textStyle="bold"
                        tools:text="1000" />

                    <TextView
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/stat_found"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/default_text_color" />

                    <TextView
                        android:id="@+id/text_view_found_books_value"
                        android:layout_gravity="end"
                        android:layout_marginBottom="8dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/default_text_color"
                        android:textStyle="bold"
                        tools:text="750" />

                    <TextView
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/stat_missing"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/default_text_color" />

                    <TextView
                        android:id="@+id/text_view_missing_books_value"
                        android:layout_gravity="end"
                        android:layout_marginBottom="8dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/default_text_color"
                        android:textStyle="bold"
                        tools:text="200" />

                    <TextView
                        android:layout_marginEnd="16dp"
                        android:text="@string/stat_new_unexpected"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/default_text_color" />
                    <TextView android:id="@+id/text_view_new_or_unexpected_books_value" tools:text="10" android:textAppearance="?attr/textAppearanceBodyMedium" android:textStyle="bold" android:layout_gravity="end"/>
                </GridLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonShowFilterPage"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_filter_label"
                app:icon="@drawable/ic_filter_list"
                app:layout_constraintTop_toBottomOf="@id/card_statistics"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_books"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/buttonShowFilterPage"
                app:layout_constraintBottom_toTopOf="@id/button_save_and_export"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                tools:listitem="@layout/item_book_row"
                android:clipToPadding="false"
                android:paddingBottom="72dp" />

            <Button
                android:id="@+id/button_mark_selected_missing"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_mark_selected_missing"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline_center_bottom_buttons"
                android:layout_marginEnd="8dp"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_center_bottom_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="189dp" />

            <Button
                android:id="@+id/button_save_and_export"
                style="?attr/materialButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_save_opname_results"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline_center_bottom_buttons"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
