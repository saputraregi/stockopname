<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WriteTagFragment"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewWriteInstruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/write_instruction"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Bagian Baca Tag Target -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutCurrentEpc"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/current_epc_hex_hint"
            app:layout_constraintTop_toBottomOf="@id/textViewWriteInstruction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonReadTargetTag"
            android:layout_marginEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCurrentEpc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:longClickable="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonReadTargetTag"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/read_target_tag_button"
            app:layout_constraintTop_toTopOf="@id/textInputLayoutCurrentEpc"
            app:layout_constraintBottom_toBottomOf="@id/textInputLayoutCurrentEpc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textInputLayoutCurrentEpc"/>

        <!-- Bagian Tulis EPC Baru -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutNewEpcHex"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/new_epc_hex_hint"
            app:helperText="@string/new_epc_hex_helper"
            app:counterEnabled="true"
            app:counterMaxLength="24"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutCurrentEpc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNewEpcHex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:digits="0123456789ABCDEFabcdef"
            android:maxLength="24" /> <!-- Sesuaikan dengan kebutuhan panjang EPC -->
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewAsciiPreviewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ascii_preview_label"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutNewEpcHex"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewAsciiPreviewValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Contoh Teks ASCII"
        android:textAppearance="?attr/textAppearanceBody1"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/textViewAsciiPreviewLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonWriteNewEpc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/write_new_epc_button"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textViewAsciiPreviewValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bagian Penguncian Tag -->
    <View
        android:id="@+id/dividerLock"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/buttonWriteNewEpc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewLockSectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lock_section_label"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/dividerLock"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewLockWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lock_warning_text"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLockSectionLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutAccessPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/access_password_hint"
        app:helperText="@string/access_password_helper"
        app:counterEnabled="true"
        app:counterMaxLength="8"
        app:layout_constraintTop_toBottomOf="@id/textViewLockWarning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextAccessPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapCharacters"
        android:digits="0123456789ABCDEFabcdef"
        android:maxLength="8" />
</com.google.android.material.textfield.TextInputLayout>

<Spinner
android:id="@+id/spinnerLockType"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginTop="16dp"
android:prompt="@string/select_lock_type_prompt"
android:entries="@array/lock_types_array"
app:layout_constraintTop_toBottomOf="@id/textInputLayoutAccessPassword"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:minHeight="48dp"/>

<Button
android:id="@+id/buttonLockTag"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="@string/lock_tag_button"
android:layout_marginTop="16dp"
app:layout_constraintTop_toBottomOf="@id/spinnerLockType"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TextView untuk Status Penulisan/Penguncian -->
<TextView
android:id="@+id/textViewWriteStatus"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginTop="16dp"
android:layout_marginBottom="16dp"
android:textAppearance="?attr/textAppearanceBody2"
android:gravity="center_horizontal"
tools:text="Status: Operasi berhasil dilakukan."
app:layout_constraintTop_toBottomOf="@id/buttonLockTag"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
