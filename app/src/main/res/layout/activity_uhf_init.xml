<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UhfInitActivity">

    <!-- Background Image untuk Seluruh Layar -->
    <ImageView
        android:id="@+id/imageViewFullScreenBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/your_background_image"
        android:scaleType="centerCrop"
        android:alpha="0.35"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@null" />

    <!-- Blok Putih Semi-Transparan untuk Area Logo dan Judul -->
    <View
        android:id="@+id/viewTopBackgroundBlock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66FFFFFF"
        app:layout_constraintTop_toTopOf="@id/imageViewLogo"
        app:layout_constraintBottom_toBottomOf="@id/textViewAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-16dp"
        android:layout_marginBottom="-16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Logo Aplikasi -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="46dp"
        android:layout_height="28dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/app_logo_description"
        android:src="@drawable/ic_your_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Judul Aplikasi -->
    <TextView
        android:id="@+id/textViewAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_logo_description"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"/> <!-- Tambah margin bawah untuk memberi ruang sebelum RecyclerView -->

    <!-- RecyclerView Menu -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/textViewAppTitle"
        app:layout_constraintBottom_toTopOf="@id/viewBottomBackgroundBlock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:listitem="@layout/item_menu" />

    <!-- Blok Putih Semi-Transparan untuk Area Status dan Tombol -->
    <View
        android:id="@+id/viewBottomBackgroundBlock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66FFFFFF"
        app:layout_constraintTop_toTopOf="@id/textViewReaderStatus"
        app:layout_constraintBottom_toBottomOf="@id/buttonReaderAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-16dp"
        android:layout_marginBottom="-16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Status Reader -->
    <TextView
        android:id="@+id/textViewReaderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status Reader: Tidak Terhubung"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/buttonReaderAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"/>

    <!-- Tombol Aksi Reader -->
    <Button
        android:id="@+id/buttonReaderAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hubungkan Reader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" /> <!-- Sesuaikan margin agar pas di dalam blok -->

</androidx.constraintlayout.widget.ConstraintLayout>
