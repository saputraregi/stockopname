<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemBookCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"> <!-- Foreground untuk ripple effect di dalam card -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemBookRowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Konten TextView dan ImageView sama seperti contoh sebelumnya -->
        <!-- ... (letakkan semua ImageView dan TextView di sini) ... -->

        <ImageView
            android:id="@+id/imageViewStatusIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewItemCode"
            app:layout_constraintBottom_toBottomOf="@+id/textViewBookLocation"
            tools:srcCompat="@drawable/ic_help_outline_gray"
            android:contentDescription="@string/cd_status_icon" />

        <TextView
            android:id="@+id/textViewItemCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageViewStatusIcon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="BK-00123" />

        <TextView
            android:id="@+id/textViewBookTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/default_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textViewItemCode"
            app:layout_constraintTop_toBottomOf="@id/textViewItemCode"
            tools:text="Judul Buku yang Cukup Panjang Sekali" />

        <TextView
            android:id="@+id/textViewBookLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="@color/default_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textViewItemCode"
            app:layout_constraintTop_toBottomOf="@id/textViewBookTitle"
            tools:text="Lokasi: Rak A1 / Baris 3" />

        <TextView
            android:id="@+id/textViewRfidTag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="@color/default_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textViewItemCode"
            app:layout_constraintTop_toBottomOf="@id/textViewBookLocation"
            tools:text="EPC: E200ABCD1234" />

        <TextView
            android:id="@+id/textViewRfidPairingStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@id/textViewItemCode"
            app:layout_constraintTop_toBottomOf="@id/textViewRfidTag"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Status RFID: Belum Ditag"
            tools:textColor="@color/orange_needs_attention"/>

        <TextView
            android:id="@+id/textViewScanStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/textViewItemCode"
            app:layout_constraintTop_toBottomOf="@id/textViewRfidPairingStatus"
            tools:text="DITEMUKAN"
            tools:textColor="@color/green_found"/>

        <TextView
            android:id="@+id/textViewScanTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="@color/default_text_color"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewScanStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewScanStatus"
            tools:text="Terakhir dilihat: 10:30:45"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
