<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldLayout_search_book"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cari Buku (Judul, Kode Item, EPC)"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_search"> <!-- Tambahkan ikon search -->

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_search_book_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/default_text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/progressBar_loading_books"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_selectable_books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxHeight="300dp" />

    <TextView
        android:id="@+id/textView_no_books_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tidak ada buku yang cocok atau sudah ditag."
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

</LinearLayout>
