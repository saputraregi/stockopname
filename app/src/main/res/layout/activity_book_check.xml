<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookCheckActivity">

    <!-- Toolbar akan menempel ke tepi, tanpa inset dari padding parent -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBookCheck"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        app:title="@string/title_activity_book_check"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Kontainer untuk konten utama (selain tombol bawah), dengan padding internal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarBookCheck"
        app:layout_constraintBottom_toTopOf="@+id/bottom_actions_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewInstruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/instruction_book_check"
            android:textAppearance="?attr/textAppearanceHeadline6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBarBookCheck"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/textViewInstruction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewStatusBookCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBarBookCheck"
            tools:text="Status: Menunggu pemindaian..." />

        <!-- Detail Buku yang Ditemukan (ScrollView) -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollViewDetails"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewStatusBookCheck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewBookDetailsCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textViewDetailTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:textAppearance="?attr/textAppearanceHeadline5"
                        tools:text="Judul Buku yang Sangat Menarik" />

                    <!-- Baris 1: Kode Item -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="4dp">
                        <TextView android:text="@string/label_detail_item_code" android:textStyle="bold" android:layout_width="120dp" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/textViewDetailItemCode" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="BK00123"/>
                    </LinearLayout>

                    <!-- Baris 2: Lokasi -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                        <TextView android:text="@string/label_detail_location" android:textStyle="bold" android:layout_width="120dp" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/textViewDetailLocation" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="Rak A1-Sastra"/>
                    </LinearLayout>

                    <!-- Baris 3: Tag RFID -->
                    <TextView android:text="@string/label_detail_rfid_tag" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/textViewDetailRfidTag" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="monospace" android:layout_marginBottom="4dp" tools:text="1234567890ABCDEF12345678"/>

                    <!-- Baris 4: TID -->
                    <TextView android:text="@string/label_detail_tid" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/textViewDetailTid" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="monospace" android:layout_marginBottom="8dp" tools:text="E28011700000020C9F2B172D"/>

                    <!-- Baris 5: Pairing Status -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="4dp">
                        <TextView android:text="@string/label_detail_pairing_status" android:textStyle="bold" android:layout_width="120dp" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/textViewDetailPairingStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="PAIRED_WRITE_SUCCESS"/>
                    </LinearLayout>

                    <!-- Baris 6: Opname Status -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                        <TextView android:text="@string/label_detail_opname_status" android:textStyle="bold" android:layout_width="120dp" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/textViewDetailOpnameStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="FOUND"/>
                    </LinearLayout>

                    <!-- Baris 7: Terakhir Dilihat -->
                    <TextView android:text="@string/label_detail_last_seen" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/textViewDetailLastSeen" android:layout_width="match_parent" android:layout_height="wrap_content" tools:text="12 Des 2023 10:00 di Rak B2"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout> <!-- Akhir dari main_content_area -->

    <!-- Kontainer Tombol Aksi di Bawah (DIMODIFIKASI) -->
    <LinearLayout
        android:id="@+id/bottom_actions_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="?android:attr/colorBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- BARU: Kontainer untuk Toggle Mode Scan (UHF - Switch - Barcode) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scan_mode_toggle_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/label_scan_mode_barcode_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barcode"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/default_text_color"
                app:layout_constraintEnd_toStartOf="@+id/switchBookCheckScanMode"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/switchBookCheckScanMode"
                app:layout_constraintBottom_toBottomOf="@+id/switchBookCheckScanMode"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchBookCheckScanMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:checked="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/label_scan_mode_uhf_check"
                app:layout_constraintEnd_toStartOf="@+id/label_scan_mode_barcode_check" />

            <TextView
                android:id="@+id/label_scan_mode_uhf_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UHF"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/default_text_color"
                app:layout_constraintBottom_toBottomOf="@+id/switchBookCheckScanMode"
                app:layout_constraintStart_toEndOf="@id/switchBookCheckScanMode"
                app:layout_constraintTop_toTopOf="@+id/switchBookCheckScanMode"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- AKHIR BARU -->

        <!-- Satu tombol Scan/Stop utama -->
        <Button
            android:id="@+id/buttonToggleBookCheckScan"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_start_scan_book"
            app:icon="@drawable/ic_scan_uhf" /> <!-- Ganti dengan ikon yang sesuai -->

        <Button
            android:id="@+id/buttonClearCheck"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_clear_check_result"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>