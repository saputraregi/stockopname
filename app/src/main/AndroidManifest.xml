<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.aplikasistockopnameperpus">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplikasiStockOpnamePerpus"
        tools:targetApi="34">

        <activity
            android:name=".UhfInitActivity"
            android:exported="true"
            android:label="@string/title_activity_uhf_init">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StockOpnameActivity"
            android:exported="false"
            android:label="@string/title_activity_stock_opname"
            android:parentActivityName=".UhfInitActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UhfInitActivity" />
        </activity>

        <activity
            android:name=".ImportExportActivity"
            android:exported="false"
            android:label="@string/title_activity_import_export"
            android:parentActivityName=".UhfInitActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UhfInitActivity" />
        </activity>

        <activity
            android:name=".ReportActivity"
            android:exported="false"
            android:label="@string/title_activity_report"
            android:parentActivityName=".UhfInitActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UhfInitActivity" />
        </activity>

        <activity
            android:name=".ReadWriteTagActivity"
            android:exported="false"
            android:label="@string/title_activity_read_write_tag"
            android:parentActivityName=".UhfInitActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UhfInitActivity" />
        </activity>

        <activity
            android:name=".SetupActivity"
            android:exported="false"
            android:label="@string/title_activity_setup"
            android:parentActivityName=".UhfInitActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UhfInitActivity" />
        </activity>

        <activity
            android:name=".RadarActivity"
            android:exported="false"
            android:label="@string/title_activity_radar"
            android:parentActivityName=".UhfInitActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UhfInitActivity" />
        </activity>

        <activity
            android:name=".BookTaggingActivity"
            android:exported="false"
            android:label="Pair and Write"
            android:parentActivityName=".UhfInitActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UhfInitActivity" />
        </activity>

        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:foregroundServiceType="dataSync"
            tools:node="merge"
            tools:replace="android:foregroundServiceType"/>

    </application>

</manifest>
